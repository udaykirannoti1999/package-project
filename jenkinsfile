pipeline {
    agent any

    tools {
        git 'Git'  // Ensure this matches the name in Global Tool Configuration
    }

    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    sh 'echo "Building the project..."'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh 'echo "Running tests..."'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    sh 'echo "Deploying application..."'
                }
            }
        }
    }
}
